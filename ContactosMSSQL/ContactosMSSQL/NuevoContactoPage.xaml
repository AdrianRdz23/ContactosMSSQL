<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactosMSSQL.NuevoContactoPage">


    
    <ContentPage.Content>
        <StackLayout Margin="20">
           <!-- En entry puedes agregar cualquier tipo de modificaciones con el texto. Por ejemplo, text=nombre,textcolor="" fontfamily,fontattributes -->
            <Entry x:Name="nombreEntry"
                   Placeholder="Nombre"/>
            <Entry x:Name="apellidoEntry"
                   Placeholder="Apellido"/>
            <Entry x:Name="emailEntry"
                   Style="{StaticResource estiloAdicional}"
                   Keyboard="Email"
                   Placeholder="Email"/>
            <Entry x:Name="telefonoEntry"
                   Style="{StaticResource estiloAdicional}"
                   Keyboard="Telephone"
                   Placeholder="Telefono"/>
            <Button Text="Guardar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>